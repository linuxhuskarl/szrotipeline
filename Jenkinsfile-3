pipeline {
    agent {
        label: 'docker-agent'
    }
    stages {
        stage('Checkout') {
            checkout scm
        }
        stage('Build') {
            dir('build') {
                sh 'cmake ..'
                sh 'cmake --build .'
            }
        }
        stage('Test') {
            sh './build/hello'
        }
        stage('Publish') {
            sh 'echo Publikujemy'
        }
    }
}
